{
  "name": "create-scale",
  "version": "1.0.1",
  "description": "A CLI to build css styles for typography and spacing.",
  "main": "dist/index.js",
  "bin": "dist/index.js",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
