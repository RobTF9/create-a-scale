    "@types/node": "^14.14.41",
    "@typescript-eslint/eslint-plugin": "^4.10.0",
    "@typescript-eslint/parser": "^4.10.0",
    "eslint": "^7.15.0",
    "jest": "^26.6.3",
    "typescript": "^4.1.3"
  },
  "author": "robtf9",
  "license": "ISC",
